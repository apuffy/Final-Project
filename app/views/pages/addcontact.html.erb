<%= render 'layouts/body' %>
<center>
	<h1>Add Contact</h1>
	
<%= form_tag(:action => :create) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.number_field :phone %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
    <%= f.hidden_field (:owner,:value => cookies[:remember_token]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
	<%= link_to 'Back', root_path %>
</center>