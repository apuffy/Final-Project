<center>
<%= render 'layouts/body' %>
	<h1>Your Contacts</h1>
	<table>
	  <tr>
	    <th>Name</th>
	    <th>Email</th>
	    <th>Phone</th>
	    <th>Address</th>
	    <th>City</th>
	    <th>State</th>
	    <th>Password</th>
	    <th>Owner</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	
	<% @users.each do |user| %>
		<%if user.owner == cookies[:remember_token] %>
	  <tr>
	    <td><%= user.name %></td>
	    <td><%= user.email %></td>
	    <td><%= user.phone %></td>
	    <td><%= user.address %></td>
	    <td><%= user.city %></td>
	    <td><%= user.state %></td>
	    <td><%= user.password %></td>
	    <td><%= user.owner %></td>
	    <td>Cookie:<%= cookies[:remember_token] %></td>
	    <td><%= link_to 'Show', user %></td>
	    <td><%= link_to 'Edit', edit_user_path(user) %></td>
	    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
	  </tr>
	  <% end %>
	<% end %>
	</table>
	
	<br />
	
	<%= link_to 'New Contact', addcontact_path %>
</div>
</center>