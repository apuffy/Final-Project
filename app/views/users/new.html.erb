<center>
	<h1>Sign Up</h1>
	
	<%= form_for(@user) do |f| %>
	  <div class="field" >
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </div>
	  
	  <div class="field" >
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </div>
	  
	  <div class="field" >
	    <%= f.label :phone %><br />
	    <%= f.text_field :phone %>
	  </div>
	  
	  <div class="field" >
	    <%= f.label :address %><br />
	    <%= f.text_field :address %>
	  </div>
	  
		<div class="field" >
	    <%= f.label :city %><br />
	    <%= f.text_field :city %>
	  </div>
	  
	  <div class="field" >
	    <%= f.label :state %><br />
	    <%= f.text_field :state %>
	  </div>
	  
	  <div class="field" >
	    <%= f.label :password %><br />
	    <%= f.text_field :password %>
	  </div>  
	  
	  <div class="actions" >
	    <%= f.submit "Sign up" %>
	  </div>
	<% end %>
</center>
